<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/hre_background</item>
        <item name="fontFamily">@font/dm_sans_bold</item>
        <item name="android:statusBarColor">#E6DDCD</item>
        <item name="android:textColor">#000000</item>

    </style>


    <!-- Dark Mode Theme  FDF2DF-->
    <style name="AppTheme.Dark" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Define other attributes -->
        <item name="colorPrimary">@color/hre_background</item>
        <item name="android:textColor">#000000</item>
        <item name="colorPrimaryDark">@color/hre_background</item>
        <item name="colorAccent">@color/hre_background</item>
        <item name="android:windowBackground">@color/hre_background</item>
        <item name="fontFamily">@font/dm_sans_bold</item>


        <!-- Add other attributes specific to the Dark Mode -->
    </style>

    <style name="menu_text_style" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Menu">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
