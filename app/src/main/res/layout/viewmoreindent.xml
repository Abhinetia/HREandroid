<?xml version="1.0" encoding="utf-8"?>
    <androidx.cardview.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:id="@+id/rv_cosepcn"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Material Id"
                    android:minWidth="120dp"
                    android:textColor="#FF9797"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_dispalymaterilaId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="GRN"
                    android:minWidth="120dp"
                    android:textColor="@color/black_text"
                    android:textSize="14sp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Material Name"
                    android:minWidth="120dp"
                    android:textColor="#FF9797"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_displaymaterialname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="GRN"
                    android:minWidth="120dp"
                    android:textColor="@color/black_text"
                    android:textSize="14sp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PCN"
                    android:minWidth="120dp"
                    android:textColor="#FF9797"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_pcn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="GRN"
                    android:minWidth="120dp"
                    android:textColor="@color/black_text"
                    android:textSize="14sp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PCN Details"
                    android:minWidth="120dp"
                    android:textColor="#FF9797"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_pcndetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="GRN"
                    android:ellipsize="marquee"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:marqueeRepeatLimit= "marquee_forever"
                    android:minWidth="120dp"
                    android:textColor="@color/black_text"
                    android:textSize="14sp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Brand"
                    android:minWidth="120dp"
                    android:textColor="#FF9797"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_displaybrand"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="GRN"
                    android:minWidth="120dp"
                    android:textColor="@color/black_text"
                    android:textSize="14sp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:minWidth="120dp"
                    android:textColor="#FF9797"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_displaystatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="GRN"
                    android:minWidth="120dp"
                    android:textColor="@color/black_text"
                    android:textSize="14sp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Created On"
                    android:minWidth="120dp"
                    android:textColor="#FF9797"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_displaycreateon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="GRN"
                    android:minWidth="120dp"
                    android:textColor="@color/black_text"
                    android:textSize="14sp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Decription"
                    android:minWidth="120dp"
                    android:textColor="#FF9797"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_dispalydesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="GRN"
                    android:minWidth="120dp"
                    android:textColor="@color/black_text"
                    android:textSize="14sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Information"
                    android:minWidth="120dp"
                    android:textColor="#FF9797"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_displayinfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="GRN"
                    android:minWidth="120dp"
                    android:textColor="@color/black_text"
                    android:textSize="14sp" />


            </LinearLayout>



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/linearfrqty"
                    android:background="@color/hre_header"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        android:background="@color/hre_header"
                        android:layout_height="wrap_content">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="1dp"
                            android:layout_marginTop="5dp"
                            android:padding="5dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:layout_alignParentStart="true"
                                android:textAllCaps="true"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:background="@drawable/ic_white"
                                android:id="@+id/tv_qtytotal"
                                android:textSize="11dp"
                                android:text="30"
                                android:textColor="@color/black_text"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:layout_gravity="center"
                                android:id="@+id/tv_timee"
                                android:layout_marginBottom="10dp"
                                android:textSize="12dp"
                                android:text="Total"
                                android:textColor="#3E3E3E"
                                />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="1dp"
                            android:layout_marginTop="5dp"
                            android:padding="5dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:layout_gravity="center"
                                android:layout_alignParentStart="true"
                                android:textAllCaps="true"
                                android:gravity="center"
                                android:background="@drawable/ic_greenbaby"
                                android:id="@+id/tv_qtyrecved"
                                android:textSize="11dp"
                                android:text="0"
                                android:textColor="@color/black_text"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:layout_marginBottom="10dp"
                                android:textSize="12dp"
                                android:layout_gravity="center"
                                android:text="Recieved"
                                android:textColor="#3E3E3E"
                                />


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="1dp"
                            android:layout_marginTop="5dp"
                            android:padding="5dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:layout_alignParentStart="true"
                                android:textAllCaps="true"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:background="@drawable/ic_babypinkboreder"
                                android:id="@+id/tv_pening"
                                android:textSize="11dp"
                                android:text="30"
                                android:textColor="@color/black_text"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:layout_gravity="center"
                                android:layout_marginBottom="10dp"
                                android:textSize="12dp"
                                android:text="Pending"
                                android:textColor="#3E3E3E"
                                />

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </androidx.cardview.widget.CardView>


