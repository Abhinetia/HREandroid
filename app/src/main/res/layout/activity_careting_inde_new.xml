<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateIntendActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="5dp"
        android:id="@+id/rvbackname"
        android:layout_margin="20dp"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ivBack"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:src="@drawable/icwhitearrow"/>

        <TextView
            android:id="@+id/tvheadername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/ivBack"
            android:text="Create Intend"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ivnotification"
            android:layout_centerVertical="true"
            android:visibility="invisible"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_notification"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_margin="23dp"
        android:layout_height="wrap_content"
        android:id="@+id/rv_chosepcn"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Type PCN"
                android:textColor="@color/white"
                android:textSize="14dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="3dp">

                <AutoCompleteTextView
                    android:id="@+id/etpcnId"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:hint="PCN_001"
                    android:padding="13dp"
                    android:singleLine="true"
                    android:textSize="13sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/carviewpcn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="2sp"
                android:visibility="gone"
                app:cardCornerRadius="10dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:minWidth="100dp"
                            android:padding="2sp"
                            android:text="Brand Name "
                            android:textSize="13dp">

                        </TextView>

                        <TextView
                            android:id="@+id/pcn_clinet"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:padding="2sp"
                            android:text=" "
                            android:textSize="13dp">

                        </TextView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:minWidth="100dp"
                            android:padding="2sp"
                            android:text="Address"
                            android:textSize="13dp"></TextView>

                        <TextView
                            android:id="@+id/pcn_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:padding="2sp"
                            android:text=""
                            android:textSize="13dp"></TextView>

                    </LinearLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/carviewpcn_doesnt_exit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="2sp"
                android:visibility="gone"
                app:cardCornerRadius="10dp"
                app:cardElevation="3dp">


                <TextView
                    android:id="@+id/tv_pcn_does_not_exit"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"
                    android:text="PCN Does't Exist!!"
                    android:layout_height="wrap_content">

                </TextView>


            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/rvaddmaterial"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:visibility="gone"
        android:layout_marginRight="20dp"
        android:id="@+id/rv_cosepcn"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">




            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="3dp"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/iv_cancel"
                    android:layout_gravity="center|top|end"
                    android:layout_marginEnd="10dp"
                    android:padding="5dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ic_close"
                    />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    android:id="@+id/rrrr"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:id="@+id/tvcategory"
                        android:layout_marginLeft="10dp"
                        android:text="Item Code"
                        android:textColor="#FF9797"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvcategoryMaterial"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="59dp"
                        android:layout_toRightOf="@+id/tvcategory"
                        android:gravity="center"
                        android:text="Hardware"
                        android:textColor="@color/black_text"
                        android:textSize="14sp" />


                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="35dp"
                    android:padding="5dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="10dp"
                        android:text="Material Name"
                        android:id="@+id/tvmaterialname"
                        android:textColor="#FF9797"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="36dp"
                        android:singleLine="true"
                        android:id="@+id/tvmaterialnameselection"
                        android:layout_centerInParent="true"
                        android:layout_toRightOf="@+id/tvmaterialname"
                        android:text="Telescopic Draw Channel"
                        android:gravity="center"
                        android:textColor="@color/black_text"
                        android:textSize="14sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="60dp"
                    android:padding="5dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="10dp"
                        android:text="Brand"
                        android:id="@+id/tvBrandname"
                        android:textColor="#FF9797"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvbrnacdnamescateg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="83dp"
                        android:layout_toRightOf="@+id/tvBrandname"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="EBCO"
                        android:textColor="@color/black_text"
                        android:textSize="14sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="80dp"
                    android:padding="5dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="10dp"
                        android:text="QuantityRequired"
                        android:id="@+id/tvuantitname"
                        android:textColor="#FF9797"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_qtysize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="18dp"
                        android:layout_toRightOf="@+id/tvuantitname"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="10 Set"
                        android:textColor="@color/black_text"
                        android:textSize="14sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="105dp"
                    android:padding="5dp"
                    android:layout_marginBottom="15dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="10dp"
                        android:text="Description"
                        android:id="@+id/tvDescription"
                        android:textColor="#FF9797"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvdescrtipondisp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="51dp"
                        android:layout_toRightOf="@+id/tvDescription"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="Delivery &amp; Arathi Interior Factory"
                        android:textColor="@color/black_text"
                        android:textSize="14sp" />
                </RelativeLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </RelativeLayout>



   <ScrollView
       android:layout_width="match_parent"
       android:scrollbars="none"
       android:layout_marginTop="5dp"
       android:layout_marginLeft="10dp"
       android:layout_marginRight="10dp"
       android:layout_below="@+id/rvaddmaterial"
       android:overScrollMode="never"
       android:background="@color/lightgrey"
       android:layout_height="match_parent">

       <LinearLayout
           android:id="@+id/linearLayout_gridLevelSinglePiece"
           android:layout_width="match_parent"
           android:orientation="vertical"
           android:layout_height="wrap_content">

       </LinearLayout>


   </ScrollView>


    <RelativeLayout
        android:id="@+id/rvaddmaterial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rv_chosepcn"
        android:layout_centerInParent="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:text="Add Indent Material"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/btn_materials"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/round_corner"
            android:text="Add Material"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="13sp" />


    </RelativeLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btncreateintend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textAllCaps="false"
        android:textSize="14sp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/round_corner"
        android:text="Send Indent"
        android:textColor="@color/white" />



</RelativeLayout>