<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:id="@+id/rv_chosepcn"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="1dp"
                app:cardCornerRadius="10dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_margin="2dp"
                    android:id="@+id/rvstatus_showing"
                    android:layout_marginBottom="2dp"
                    android:padding="5dp">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:orientation="horizontal"
                        android:id="@+id/lineafrmdate"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:textAllCaps="true"
                            android:id="@+id/tore"
                            android:gravity="center"
                            android:textSize="11dp"
                            android:text="Date :"
                            android:textColor="#FF5E5E"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:textAllCaps="true"
                            android:id="@+id/tv_displaydaee"
                            android:gravity="center"
                            android:layout_marginBottom="10dp"
                            android:textSize="13dp"
                            android:text="09-05-2023"
                            android:textColor="@color/black_text"
                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_toRightOf="@+id/lineafrmdate"
                        android:orientation="horizontal"
                        android:visibility="visible"
                        android:id="@+id/lineafromdate"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:textAllCaps="true"
                            android:id="@+id/tvore"
                            android:gravity="center"
                            android:textSize="11dp"
                            android:text="Total Amount :"
                            android:textColor="#FF5E5E"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:textAllCaps="true"
                            android:id="@+id/tv_tmee"
                            android:gravity="center"
                            android:layout_marginBottom="10dp"
                            android:textSize="13dp"
                            android:text="50000"
                            android:textColor="@color/black_text"
                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:orientation="horizontal"
                        android:layout_below="@+id/lineafrmdate"
                        android:visibility="visible"
                        android:id="@+id/purpose"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:textAllCaps="true"
                            android:id="@+id/tv_ore"
                            android:gravity="center"
                            android:textSize="11dp"
                            android:text="Purpose : "
                            android:textColor="#FF5E5E"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:textAllCaps="true"
                            android:id="@+id/tv_timee"
                            android:gravity="center"
                            android:layout_marginBottom="10dp"
                            android:textSize="13dp"
                            android:text="Amount given"
                            android:textColor="@color/black_text"
                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:orientation="horizontal"
                        android:layout_below="@+id/purpose"
                        android:visibility="visible"
                        android:id="@+id/purposee"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:textAllCaps="true"
                            android:id="@+id/tv_uploadexpense"
                            android:gravity="center"
                            android:textSize="11dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/ic_babypinkboreder"
                            android:text="Upload Expense "
                            android:textColor="@color/white"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:textAllCaps="true"
                            android:id="@+id/tv_tvdeatils"
                            android:gravity="center"
                            android:background="@drawable/ic_greenbaby"
                            android:layout_marginBottom="10dp"
                            android:textSize="13dp"
                            android:text="Details"
                            android:textColor="@color/black_text"
                            />

                            <TextView
                                android:layout_width="0dp"
                                android:visibility="gone"
                                android:id="@+id/tvpid"
                                android:layout_height="0dp"
                                />
                    </LinearLayout>


                </RelativeLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>