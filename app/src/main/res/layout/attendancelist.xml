<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rv_chosepcn"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="1dp"
                app:cardCornerRadius="10dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_margin="2dp"
                    android:id="@+id/rvstatus_showing"
                    android:layout_marginBottom="2dp"
                    android:padding="5dp">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:orientation="vertical"
                        android:id="@+id/lineafrmdate"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:textAllCaps="true"
                            android:id="@+id/tore"
                            android:gravity="center"
                            android:textSize="11dp"
                            android:text="Date"
                            android:textColor="#FF5E5E"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:textAllCaps="true"
                            android:id="@+id/tv_displaydaee"
                            android:gravity="center"
                            android:layout_marginBottom="10dp"
                            android:textSize="13dp"
                            android:text="09-05-2023"
                            android:textColor="@color/black_text"
                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/lineafrmdate"
                        android:orientation="vertical"
                        android:id="@+id/lineafromdate"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:textAllCaps="true"
                            android:id="@+id/tvore"
                            android:gravity="center"
                            android:textSize="11dp"
                            android:text="LOGIN"
                            android:textColor="#FF5E5E"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:textAllCaps="true"
                            android:id="@+id/tv_tmee"
                            android:gravity="center"
                            android:layout_marginBottom="10dp"
                            android:textSize="13dp"
                            android:text="10:24 am"
                            android:textColor="@color/black_text"
                            />


                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/lineafromdate"
                        android:orientation="vertical"
                        android:id="@+id/linearfromdate"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:textAllCaps="true"
                            android:id="@+id/tv_ore"
                            android:gravity="center"
                            android:textSize="11dp"
                            android:text="LOGOUT"
                            android:textColor="#FF5E5E"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:textAllCaps="true"
                            android:id="@+id/tv_timee"
                            android:gravity="center"
                            android:layout_marginBottom="10dp"
                            android:textSize="13dp"
                            android:text="10:24 am"
                            android:textColor="@color/black_text"
                            />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/lnrte"
                        android:layout_toRightOf="@+id/linearfromdate"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:textAllCaps="true"
                            android:gravity="center"
                            android:singleLine="true"
                            android:id="@+id/tv_re"
                            android:textSize="11dp"
                            android:text="Working Time"
                            android:textColor="#FF5E5E"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:textAllCaps="false"
                            android:id="@+id/tv_lotimee"
                            android:gravity="center"
                            android:layout_marginBottom="10dp"
                            android:textSize="13dp"
                            android:text="07:24 pm"
                            android:textColor="@color/black_text"
                            />


                    </LinearLayout>


                </RelativeLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>