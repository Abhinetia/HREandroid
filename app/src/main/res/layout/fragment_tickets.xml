<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/hre_header">

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="5dp"
        android:id="@+id/rvbackname"
        android:layout_margin="20dp"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ivBack"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/ivBack"
            android:layout_marginLeft="20dp"
            android:id="@+id/tvheadername"
            android:text="Tickets"
            android:textSize="15dp"
            android:textColor="@color/black"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ivnotification"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_notification"/>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rvaddmaterial"
        android:layout_width="match_parent"
        android:padding="2sp"
        android:layout_below="@+id/rvbackname"
        android:gravity="center|start"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Open"
            android:layout_centerVertical="true"
            android:textSize="12dp"
            android:id="@+id/tvopen"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/ic_dot"
            android:textColor="@color/black_text"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:id="@+id/tv_count"
            android:layout_toRightOf="@+id/tvopen"
            android:background="@drawable/ic_roundd"
            android:text="29"
            android:textColor="@color/black_text"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:id="@+id/imgline"
            android:layout_toRightOf="@+id/tv_count"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_line"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:textSize="12sp"
            android:layout_toRightOf="@+id/imgline"
            android:text="Closed"
            android:textColor="@color/black_text"
            />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_materials"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corner"
            android:text="Create Ticket"
            android:layout_alignParentEnd="true"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="12sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:layout_below="@+id/rvaddmaterial"
        android:layout_height="wrap_content"
        android:id="@+id/rv_chosepcn"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="3dp"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/rvstatus_showing"
                    android:layout_marginBottom="10dp"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/tvticketno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="10dp"
                        android:text="#21223"
                        android:textColor="#FF9797"
                        android:textSize="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tvticketno"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="10dp"
                        android:text="Open"
                        android:gravity="center"
                        android:background="@drawable/ic_openrectan"
                        android:textColor="@color/black_text"
                        android:textSize="11dp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="10dp"
                        android:text="14 Mar 2023"
                        android:id="@+id/tv_status"
                        android:gravity="center"
                        android:layout_alignParentEnd="true"
                        android:textColor="@color/black_text"
                        android:textSize="11dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="45dp"
                    android:layout_marginStart="10dp"
                    android:padding="5dp"
                    android:id="@+id/rrrr"
                    android:layout_marginEnd="10dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="10dp"
                        android:text="Received Defective Sheets"
                        android:textColor="@color/black_text"
                        android:textSize="14sp" />


                </RelativeLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="80dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_height="wrap_content">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:maxLines="2"
                            android:padding="5dp"
                            android:text="I have Received Defective 15 Ply Sheet with different size and color."
                            android:textColor="@color/black_text"
                            android:textSize="12sp" />


                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:padding="5dp"
                            android:id="@+id/tv_viewmore"
                            android:layout_marginBottom="10dp"
                            android:textSize="10dp"
                            android:text="View Replies"
                            android:textColor="#FF5E5E"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:textSize="10dp"
                            android:id="@+id/tv_mailcount"
                            android:layout_toRightOf="@+id/tv_viewmore"
                            android:background="@drawable/ic_qty"
                            android:text="07"
                            android:textColor="@color/black_text"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:gravity="right"
                            android:id="@+id/tv_assigned"
                            android:textSize="10dp"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/tv_mailcount"
                            android:background="@drawable/ic_balckround"
                            android:text="Assigned"
                            android:textColor="@color/white"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:gravity="right"
                            android:textSize="10dp"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/tv_assigned"
                            android:background="@drawable/ic_openrectan"
                            android:text="Field Manager"
                            android:textColor="@color/black_text"
                            />


                    </RelativeLayout>


                </LinearLayout>



            </androidx.cardview.widget.CardView>



        </LinearLayout>

    </RelativeLayout>



</RelativeLayout>