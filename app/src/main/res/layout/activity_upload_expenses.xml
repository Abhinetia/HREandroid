<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="5dp"
            android:id="@+id/rvbackname"
            android:layout_margin="20dp"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ivBack"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_back"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/ivBack"
                android:layout_marginLeft="20dp"
                android:id="@+id/tvheadername"
                android:text="Upload Expenses"
                android:textSize="15dp"
                android:textColor="@color/black"
                />



        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_below="@+id/rvbackname"
            android:padding="5dp"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/black_text"
                    android:text="Employee Name:"
                    android:minWidth="100dp"
                    android:textSize="13dp"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/tp_qty"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ti_namedispaly"
                        android:layout_gravity="start"
                        android:gravity="start"
                        android:textSize="12sp"
                        android:padding="12dp"
                        android:editable="false"
                        android:singleLine="false"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/black_text"
                    android:text="Amount :"
                    android:minWidth="105dp"
                    android:textSize="13dp"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_gravity="start"
                        android:gravity="start"
                        android:textSize="12sp"
                        android:id="@+id/tvamount"
                        android:padding="12dp"
                        android:inputType="number"
                        android:singleLine="false"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/black_text"
                    android:text="Purpose :"
                    android:layout_gravity="center"
                    android:minWidth="105dp"
                    android:textSize="13dp"
                    android:layout_height="wrap_content"/>



                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="3dp">

                    <AutoCompleteTextView
                        android:id="@+id/tvPurpose"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:drawableRight="@drawable/ic_dropdown"
                        android:hint="Select Purpose       "
                        android:focusable="false"
                        android:padding="13dp"
                        android:singleLine="true"
                        android:textSize="12sp" />

                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:visibility="gone"
                android:id="@+id/linearlayoutpcn"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/black_text"
                    android:text="PCN :"
                    android:layout_gravity="center"
                    android:minWidth="105dp"
                    android:textSize="13dp"
                    android:layout_height="wrap_content"/>



                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="3dp">

                    <AutoCompleteTextView
                        android:id="@+id/tvPcn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:drawableRight="@drawable/ic_dropdown"
                        android:hint="Select PCN               "
                        android:focusable="true"
                        android:padding="13dp"
                        android:singleLine="true"
                        android:textSize="12sp" />

                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/black_text"
                    android:text="Date of Bill :"
                    android:layout_gravity="center"
                    android:minWidth="105dp"
                    android:textSize="13dp"
                    android:layout_height="wrap_content"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardElevation="3dp"
                    android:layout_toLeftOf="@+id/crdmonthg"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp">


                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/tv_date"
                        android:hint="Select Date                 "
                        android:singleLine="true"
                        android:textSize="13sp"
                        android:clickable="true"
                        android:inputType="textCapSentences"
                        android:padding="12dp"
                        android:focusable="false"
                        android:background="@color/white"
                        />





                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/crdviewDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="2.5dp">

                <EditText
                    android:id="@+id/et_descrtiption"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:background="@color/white"
                    android:gravity="start"
                    android:hint="Comments"
                    android:padding="12dp"
                    android:singleLine="false"
                    android:textColor="@color/black_text"
                    android:textSize="12sp" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="Upload Image : "
                    android:textAllCaps="false"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/black_text"
                    android:textSize="13sp" />
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:id="@+id/imageview"
                    android:layout_weight="1"
                    android:background="@drawable/ic_addd"
                    android:backgroundTint="@color/black"
                    android:textAllCaps="false"
                    android:textSize="13sp" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:id="@+id/imageview1"
                    android:layout_weight="1"
                    android:background="@drawable/ic_addd"
                    android:backgroundTint="@color/black"
                    android:textAllCaps="false"
                    android:textSize="13sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1.5"
                    android:text="Request Cash"
                    android:visibility="invisible"
                    android:textAllCaps="false"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/white"
                    android:textSize="13sp" />
                <TextView
                    android:id="@+id/btn_materials"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/round_corner"
                    android:text="Upload Expenses"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

            </LinearLayout>



        </LinearLayout>

    </RelativeLayout>



</androidx.cardview.widget.CardView>