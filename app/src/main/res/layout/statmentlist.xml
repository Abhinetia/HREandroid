<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="10dp"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:id="@+id/rv_chosepcn"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="1dp"
                app:cardCornerRadius="10dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_margin="2dp"
                    android:id="@+id/rvstatus_showing"
                    android:layout_marginBottom="2dp"
                    android:padding="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:id="@+id/lineafrmdate"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_marginLeft="15dp"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:textAllCaps="true"
                                android:id="@+id/tore"
                                android:gravity="center"
                                android:textSize="11dp"
                                android:text="Trns Date :"
                                android:textColor="#FF5E5E"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:textAllCaps="true"
                                android:id="@+id/tv_transdate"
                                android:gravity="center"
                                android:layout_marginBottom="10dp"
                                android:textSize="13dp"
                                android:text="09-05-2023"
                                android:textColor="@color/black_text"
                                />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:visibility="visible"
                            android:layout_weight="1"
                            android:id="@+id/lineafromdate"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:textAllCaps="true"
                                android:id="@+id/tvore"
                                android:gravity="center"
                                android:textSize="11dp"
                                android:text="Mode :"
                                android:textColor="#FF5E5E"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:textAllCaps="true"
                                android:id="@+id/tv_modecashoronline"
                                android:gravity="center"
                                android:layout_marginBottom="10dp"
                                android:textSize="13dp"
                                android:text="Online"
                                android:textColor="@color/black_text"
                                />


                        </LinearLayout>

                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:id="@+id/linearcash"
                        android:layout_below="@+id/lineafrmdate"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_marginLeft="15dp"
                            android:layout_weight="1"
                            android:weightSum="2"
                            android:orientation="horizontal"
                            android:visibility="visible"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:textAllCaps="true"
                                android:id="@+id/tv_ore"
                                android:gravity="center"
                                android:textSize="11dp"
                                android:text="Type : "
                                android:textColor="#FF5E5E"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:layout_marginLeft="20dp"
                                android:textAllCaps="true"
                                android:id="@+id/tv_typecreditordebit"
                                android:gravity="center"
                                android:layout_marginBottom="10dp"
                                android:textSize="13dp"
                                android:text="Credit"
                                android:textColor="@color/black_text"
                                />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:visibility="visible"
                            android:id="@+id/pose"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:maxWidth="450dp"
                                android:textAllCaps="true"
                                android:gravity="center"
                                android:textSize="11dp"
                                android:text="Amount : "
                                android:textColor="#FF5E5E"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:textAllCaps="true"
                                android:gravity="center"
                                android:id="@+id/tv_amount"
                                android:layout_marginBottom="10dp"
                                android:textSize="13dp"
                                android:text="5200"
                                android:textColor="@color/black_text"
                                />


                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:id="@+id/licash"
                        android:layout_below="@+id/linearcash"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_marginLeft="15dp"
                            android:layout_weight="1"
                            android:weightSum="2"
                            android:orientation="horizontal"
                            android:visibility="visible"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:textAllCaps="true"
                                android:gravity="center"
                                android:textSize="11dp"
                                android:text="ENTY Date : "
                                android:textColor="#FF5E5E"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:textAllCaps="true"
                                android:gravity="center"
                                android:id="@+id/tv_entrydate"
                                android:layout_marginBottom="10dp"
                                android:textSize="13dp"
                                android:text="09-05-2023"
                                android:textColor="@color/black_text"
                                />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:visibility="visible"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:maxWidth="450dp"
                                android:textAllCaps="true"
                                android:gravity="center"
                                android:textSize="11dp"
                                android:text="Ref : "
                                android:textColor="#FF5E5E"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:textAllCaps="true"
                                android:gravity="center"
                                android:id="@+id/tv_refernceno"
                                android:layout_marginBottom="10dp"
                                android:textSize="13dp"
                                android:singleLine="true"
                                android:text="hdhdhdhdjdjdj"
                                android:textColor="@color/black_text"
                                />


                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_below="@+id/licash"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_marginLeft="15dp"
                            android:layout_weight="1"
                            android:weightSum="2"
                            android:orientation="horizontal"
                            android:visibility="visible"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:textAllCaps="true"
                                android:gravity="center"
                                android:textSize="11dp"
                                android:text="Comments : "
                                android:textColor="#FF5E5E"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:id="@+id/tv_commnets"
                                android:singleLine="true"
                                android:textAllCaps="true"
                                android:layout_marginBottom="10dp"
                                android:textSize="13dp"
                                android:text="09-05-2023"
                                android:textColor="@color/black_text"
                                />


                        </LinearLayout>

                    </LinearLayout>


                </RelativeLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </RelativeLayout>


</androidx.cardview.widget.CardView>