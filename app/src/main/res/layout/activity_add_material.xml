<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    app:cardCornerRadius="20dp"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="5dp"
        android:id="@+id/rvbackname"
        android:layout_margin="20dp"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ivBack"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Intend Material"
            android:layout_marginLeft="30dp"
            android:layout_centerInParent="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/black_text"
            android:textSize="18sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ivnotification"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_notification"/>


    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:padding="10dp"
        android:layout_marginTop="50dp"
        android:id="@+id/rvmaterial"
        android:layout_marginRight="15dp"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:id="@+id/ln_indent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Item Code"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/black_text"
                        android:textSize="13sp"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="3dp"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="10dp">

                        <AutoCompleteTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/et_itemcode"
                            android:hint="Search Item Code"
                            android:singleLine="true"
                            android:imeOptions="actionNext"
                            android:textSize="13sp"
                            android:padding="12dp"
                            android:drawableRight="@drawable/ic_search"
                            android:background="@color/white"
                            />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Material Category"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/black_text"
                        android:textSize="13sp"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="3dp"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="10dp">

                        <AutoCompleteTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/et_chosecategory"
                            android:hint="Choose Category"
                            android:singleLine="true"
                            android:textSize="13sp"
                            android:imeOptions="actionNext"
                            android:padding="12dp"
                            android:drawableRight="@drawable/ic_dropdown"
                            android:background="@color/white"
                            />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Material Name"
                        android:id="@+id/tv_material"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/black_text"
                        android:textSize="13sp"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="3dp"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="10dp">

                        <AutoCompleteTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/et_materialName"
                            android:hint="Choose Material Name"
                            android:padding="12dp"
                            android:dropDownHeight="130dp"
                            android:imeOptions="actionNext"
                            android:drawableRight="@drawable/ic_dropdown"
                            android:textSize="13sp"
                            android:singleLine="true"
                            android:background="@color/white"
                            />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Brand / Make"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/black_text"
                        android:textSize="13sp"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="3dp"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="10dp">

                        <AutoCompleteTextView
                            android:id="@+id/etbrandname"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:drawableRight="@drawable/ic_dropdown"
                            android:hint="Choose Brand/Make"
                            android:imeOptions="actionNext"
                            android:padding="12dp"
                            android:singleLine="true"
                            android:textSize="13sp"
                            tools:ignore="TouchTargetSizeCheck" />

                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:id="@+id/linearqty"
                            android:layout_marginTop="10dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Size"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="10dp"
                                android:textColor="@color/black_text"
                                android:textSize="13sp"/>

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardElevation="3dp"
                                android:layout_margin="10dp"
                                app:cardCornerRadius="10dp">

                                <AutoCompleteTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:hint="   Choose Size   "
                                    android:singleLine="true"
                                    android:inputType="number"
                                    android:id="@+id/etsize"
                                    android:imeOptions="actionNext"
                                    android:textSize="12sp"
                                    android:drawableRight="@drawable/ic_dropdown"
                                    android:padding="12dp"
                                    android:background="@color/white"
                                    />

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:id="@+id/linearunit"
                            android:layout_marginTop="10dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Thickness"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="10dp"
                                android:textColor="@color/black_text"
                                android:textSize="13sp"/>

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardElevation="3dp"
                                android:layout_margin="10dp"
                                app:cardCornerRadius="10dp">

                                <AutoCompleteTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:hint="     "
                                    android:id="@+id/et_thickness"
                                    android:singleLine="true"
                                    android:imeOptions="actionNext"
                                    android:textSize="12sp"
                                    android:drawableRight="@drawable/ic_dropdown"
                                    android:padding="12dp"
                                    android:background="@color/white"
                                    />

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>


                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Grade"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/black_text"
                        android:textSize="13sp"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="3dp"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="10dp">

                        <AutoCompleteTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="Choose Grade"
                            android:singleLine="true"
                            android:id="@+id/et_grade"
                            android:textSize="13sp"
                            android:imeOptions="actionNext"
                            android:padding="12dp"
                            android:background="@color/white"
                            />

                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Shades"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/black_text"
                        android:textSize="13sp"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="3dp"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="10dp">

                        <AutoCompleteTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="Choose Shade No"
                            android:singleLine="true"
                            android:textSize="13sp"
                            android:imeOptions="actionNext"
                            android:id="@+id/et_shadeno"
                            android:padding="12dp"
                            android:background="@color/white"
                            />

                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Units"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/black_text"
                        android:textSize="13sp"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="3dp"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="10dp">

                        <AutoCompleteTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="Enter Units"
                            android:singleLine="true"
                            android:textSize="13sp"
                            android:imeOptions="actionNext"
                            android:id="@+id/et_units"
                            android:padding="12dp"
                            android:background="@color/white"
                            />

                    </androidx.cardview.widget.CardView>



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Special Description"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/black_text"
                        android:textSize="13sp"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="3dp"
                        android:id="@+id/crdviewDesc"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="10dp">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="Note"
                            android:id="@+id/et_descriptionofmaterial"
                            android:layout_gravity="start"
                            android:gravity="start"
                            android:imeOptions="actionNext"
                            android:singleLine="false"
                            android:minHeight="100dp"
                            android:textSize="12sp"
                            android:padding="12dp"
                            android:background="@color/white"
                            />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_materials"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/ln_indent"
                    android:background="@drawable/round_corner"
                    android:text="Add Material"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="12sp" />


            </LinearLayout>
        </ScrollView>
    </RelativeLayout>



</androidx.cardview.widget.CardView>

