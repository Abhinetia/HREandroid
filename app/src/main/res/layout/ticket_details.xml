<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content"
        android:id="@+id/rv_chosepcn"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="1dp"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/rvstatus_showing"
                    android:layout_marginBottom="10dp"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/tvticketno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="10dp"
                        android:text="#21223"
                        android:textColor="#FF9797"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/tv_ticketstatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/tvticketno"
                        android:background="@drawable/ic_openrectan"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="Open"
                        android:textColor="@color/black_text"
                        android:textSize="12dp" />


                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:text="14 Mar 2023"
                        android:textColor="@color/black_text"
                        android:textSize="12dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="45dp"
                    android:layout_marginStart="10dp"
                    android:padding="5dp"
                    android:id="@+id/rrrr"
                    android:layout_marginEnd="10dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_ticketsubject"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="10dp"
                        android:text="Received Defective Sheets"
                        android:textColor="@color/black_text"
                        android:textSize="15sp" />


                </RelativeLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="80dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_height="wrap_content">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:maxLines="2"
                            android:padding="5dp"
                            android:id="@+id/tv_body"
                            android:text="I have Received Defective 15 Ply Sheet with different size and color."
                            android:textColor="@color/black_text"
                            android:textSize="13sp" />


                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:padding="5dp"
                            android:id="@+id/tv_viewmore"
                            android:layout_marginBottom="10dp"
                            android:textSize="11dp"
                            android:text="View Replies"
                            android:textColor="#FF5E5E"
                            />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="7dp"
                            android:visibility="visible"
                            android:gravity="right"
                            android:id="@+id/tv_assigned"
                            android:textSize="11dp"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/tv_viewmore"
                            android:background="@drawable/ic_balckround"
                            android:text="More Info"
                            android:textColor="@color/white"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="7dp"
                            android:gravity="right"
                            android:visibility="gone"
                            android:textSize="11dp"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/tv_assigned"
                            android:background="@drawable/ic_openrectan"
                            android:text="Field Manager"
                            android:textColor="@color/black_text"
                            />


                    </RelativeLayout>


                </LinearLayout>



            </androidx.cardview.widget.CardView>



        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>